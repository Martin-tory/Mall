/* pages/user/user.wxss */
page {
  background-color: #f2f2f2;
}
.userinfo {
  /* position: relative; */
  display: flex;
  flex-direction: row;
  align-items: center;   
  /* justify-content: center;  */
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 100%;
  height: 250rpx;
  background-color: #fff;
}

