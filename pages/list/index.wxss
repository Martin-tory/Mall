/* pages/list/list.wxss */
@import '../template/product-tpl.wxss';

.nav-bar {
  position: fixed;
  top: 0;
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fafafa;
  box-shadow: 0 1rpx 5rpx #dcdcdc;
  z-index: 9;
}
.nav-bar-item {
  position: relative;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.active {
  color: #000;
}
.nav-bar-item.active:after {
  content: "";  
  display: block;  
  position: absolute;  
  bottom: -1rpx; 
  right: 0; 
  width: 100%; 
  height: 4rpx;  
  background: #de2628; 
}

.product-wrapper {
  margin-top: 120rpx;
  padding: 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
}
.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 20rpx 0;
}

.no-goods-text {
  margin-top: 120rpx;
  font-size: 32rpx;
  line-height: 2.0;
  color: #999;
}
