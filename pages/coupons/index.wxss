/* pages/coupons/index.wxss */
.nav-bar {
  position: fixed;
  top: 0;
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 5rpx #dcdcdc;
  z-index: 9;
}
.nav-bar-item {
  position: relative;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.active {
  color: #f56d02;
}
.nav-bar-item.active:after {
  content: "";  
  display: block;  
  position: absolute;  
  bottom: -1rpx; 
  left: 50%;
  margin-left: -30rpx; 
  width: 60rpx;
  height: 4rpx;  
  background: #f56d02; 
}

.coupons {
  margin-top: 100rpx;
}
.coupon {
  position: relative;
  margin: 20rpx 40rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  width: 670rpx;
  height: 210rpx;
  color: #fff;
}
.coupon image {
  position: absolute;
  left: 0;
  top: 0;
  width: 670rpx;
  height: 210rpx;
  z-index: -1;
}
.coupon .desc-wrapper {
  display: flex;
  align-items: center;
  /* padding-top: 60rpx;
  box-sizing: border-box; */
  height: 155rpx;
}
.face-value {
  display: block;
  height: 80rpx;
  font-size: 60rpx;
}
.desc {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
  height: 80rpx;
}
.desc text {
  display: block;
  font-size: 24rpx;
  line-height: 30rpx;
}
.date {
  font-size: 24rpx;
}